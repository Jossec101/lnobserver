# Lightning Graph UI
# LN Observer Configuration
# You can override these settings in your own .env file or by editing this file directly.

# API endpoint for Lightning Network channels with geodata
CHANNELS_GEO_API=https://mempool.space/api/v1/lightning/channels-geo

# API endpoint for Lightning Network channel metadata
CHANNEL_METADATA_API=https://mempool.space/api/v1/lightning/channels/

# Enable debug lightning animation (true/false)
DEBUG_LIGHTNING_ANIM=false

# Polling interval in seconds (default: 10)
POLL_INTERVAL=1

# Max number of channel events to animate at once
MAX_CHANNEL_EVENTS=10000

# Lightning animation duration in seconds (default: 60)
ANIMATION_DURATION=60
